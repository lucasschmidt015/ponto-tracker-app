{
  "expo": {
    "name": "Ponto Tracker",
    "slug": "ponto-tracker-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ponto-tracker-icon.png",
    "scheme": "pontotracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/ponto-tracker-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to register entries with location data."
      },
      "bundleIdentifier": "com.lucas.schmidt.ponto-tracker"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ponto-tracker-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.lucas.schmidt.pontotracker"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to your location to register entries with location data."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
